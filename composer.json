{
    "name": "bigcommerce/api",
    "type": "library",
    "description": "Enables PHP applications to communicate with the Bigcommerce v3 API.",
    "keywords": ["api","http","rest","ecommerce","business"],
    "homepage": "http://developer.bigcommerce.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Bigcommerce",
            "homepage": "http://www.bigcommerce.com"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.15",
        "satooshi/php-coveralls": "dev-master",
        "vlucas/phpdotenv": "1.0.6",
        "behat/behat": "2.4.*@stable",
        "guzzlehttp/guzzle": "~4.0"
    },
    "autoload": {
        "psr-0": {
            "Bigcommerce": "src/"
        }
    },
    "archive": {
        "exclude": ["bin", "bigcommerce.php"]
    }
}
